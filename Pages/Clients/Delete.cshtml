@page "{id:int?}"
@model ClientDbWebApp.Pages.Clients.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.ClientInn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientInn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.ClientType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.ClientCreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientCreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.ClientUpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientUpdatedDate)
        </dd>

        @if (Model.Client.ClientType != "ИП")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Client.Founders)
            </dt>
            <dd class="col-sm-10">
                <table class="table">
                    <tr>
                        <th>ФИО Учредителя</th>
                        <th>ИНН Учредителя</th>
                        <th>Создан</th>
                        <th>Обновлен</th>
                    </tr>
                    @foreach (var item in Model.Client.Founders)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FounderFullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FounderInn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FounderCreatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FounderUpdatedDate)
                            </td>
                        </tr>
                    }
                </table>
            </dd>
        }
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Client.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
